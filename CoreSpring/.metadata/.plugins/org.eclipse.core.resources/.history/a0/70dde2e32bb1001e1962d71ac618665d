import java.util.Scanner;

public class Server {
	ServerSocket ser;
	Socket soc;
	
	Scanner sc = new Scanner(System.in);
	
	Server() {
		try {
			
      ser = new ServerSocket();
      System.out.println("Server is Ready");
      System.out.println("waiting...");
      soc = ser.accept();
      
      
		}catch(Exception e) {	
			e.printStackTrace();		
		}
	}
	
 public static void main(String[] args) {
	 
 }
 
}
